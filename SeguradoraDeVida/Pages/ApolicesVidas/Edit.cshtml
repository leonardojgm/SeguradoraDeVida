@page
@model SeguradoraDeVida.Pages.ApolicesVidas.EditModel

@{
    ViewData["Title"] = "Editar Apólice Vida";
}

<h1>Editar</h1>

<h4>Apólice Vida @Model.ApoliceVida.IdApoliceVida</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ApoliceVida.IdApoliceVida" />
            <div class="form-group">
                <label asp-for="ApoliceVida.IdApolice" class="control-label"></label>
                <select asp-for="ApoliceVida.IdApolice" class="form-control">

                </select>
                <span asp-validation-for="ApoliceVida.IdApolice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApoliceVida.IdVida" class="control-label"></label>
                <select asp-for="ApoliceVida.IdVida" class="form-control">

                </select>
                <span asp-validation-for="ApoliceVida.IdVida" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Voltar para lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
