@page
@model SeguradoraDeVida.Pages.Apolices.EditModel

@{
    ViewData["Title"] = "Editar Apólice";
}

<h1>Editar</h1>

<h4>Apolice @Model.Apolice.IdApolice</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Apolice.IdApolice" />
            <div class="form-group">
                <label asp-for="Apolice.FormaPagamento" class="control-label"></label>
                <select asp-for="Apolice.FormaPagamento" class="form-control">
                    <option>Débito</option>
                    <option>Cartão de crédito</option>
                    <option>Boleto</option>
                </select>
                <span asp-validation-for="Apolice.FormaPagamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Apolice.DataInicio" class="control-label"></label>
                <input asp-for="Apolice.DataInicio" class="form-control" type="date" />
                <span asp-validation-for="Apolice.DataInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Apolice.Vigencia" class="control-label"></label>
                <input asp-for="Apolice.Vigencia" class="form-control" type="date" />
                <span asp-validation-for="Apolice.Vigencia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Apolice.DataPagamento" class="control-label"></label>
                <input asp-for="Apolice.DataPagamento" class="form-control" type="date" />
                <span asp-validation-for="Apolice.DataPagamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Apolice.Valor" class="control-label"></label>
                <input asp-for="Apolice.Valor" class="form-control" type="number" />
                <span asp-validation-for="Apolice.Valor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Voltar para lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
